generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  picturePath String? // Caminho opcional para avatar do usuário
  
  // Relacionamentos
  events Event[]
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Event {
  id          String @id @default(uuid())
  title       String
  description String
  startDate   String
  endDate     String
  color       EventColor @default(blue)
  
  // Relacionamento com usuário (opcional - pode existir evento sem usuário)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("events")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

enum EventColor {
  blue
  green
  red
  yellow
  purple
  orange
  gray
  
  @@map("event_colors")
}